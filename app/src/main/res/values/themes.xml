<resources>

    <style name="Theme.FileManagerPhotoEditor" parent="Theme.Material3.Light.NoActionBar" />


    <style name="AddRippleEffect" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="RoundRippleEffect">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="Paragraph">
        <item name="lineHeight">18sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tagline_color</item>
        <item name="fontFamily">@font/switzer_regular</item>
    </style>

    <style name="Heading">
        <item name="fontFamily">@font/switzer_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">26.4dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="SubHeading">
        <item name="fontFamily">@font/switzer_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/heading_color</item>
    </style>

    <style name="SectionHeading">
        <item name="fontFamily">@font/switzer_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">18dp</item>
        <item name="android:letterSpacing">-0.015</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="DescriptionHeading">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.015</item>
        <item name="android:textAlignment">textStart</item>
        <item name="lineHeight">16sp</item>
        <item name="fontFamily">@font/switzer_medium</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>


</resources>